<section id ="new-post-wrapper" class="container d-flex p-1 justify-content-center flex-column mt-2">
  <h2 class="text-center">Create a New Post</h2>

  <!--form start-->
  <form id="post-form" class="container d-flex p-1 justify-content-center flex-column border border-light rounded p-2 mb-3">
    <div>
      <label for="post-title" class="form-label">Post Title</label>
      <input type="text" id="post-title" name="post-title" class="form-control mb-3" />
    </div>

    <div>
      <label for="post-content" class="form-label">Content</label>
      <textarea id="post-content" name="post-content" class="form-control textarea mb-4"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Post!</button>
  </form>
</section>

{{#if posts.length}}
<section id="user-posts" class="container d-flex p-1 justify-content-center flex-column mt-2">
  <h2 class="text-center">Your posts</h2>
  <ol class="container d-flex p-1 justify-content-center flex-column list-unstyled">
    {{#each posts as |post|}}
    <li class="border border-light rounded p-3 mb-3">
      {{> post-details post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">âŽŒ Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}
<script src="/js/add-post.js"></script>